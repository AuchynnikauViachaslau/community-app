{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "server/**/*"
    ]
  },
  "rules": {
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "property-declaration"
    ],
    "no-default-export": true,
    "newline-before-return": true,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "jsx-no-lambda": false,
    "object-literal-sort-keys": false
  }
}